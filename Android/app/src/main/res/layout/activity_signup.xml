<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1995BC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="104sp"
        android:textColor="#FFFFFF"
        android:text="iMedicine"
        android:textSize="50sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24sp"
        android:textColor="#FFFFFF"
        android:text="Your friendly everyday dispenser"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="324sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8sp"
        android:orientation="vertical"
        android:background="@android:color/white">
        <EditText
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:hint="Enter full name"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:hint="Enter username"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/repassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:hint="Re-enter password"
            android:inputType="textPassword"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/password_error"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="password not matching"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>
    <Button
        android:id="@+id/signup"
        android:layout_width="324sp"
        android:layout_height="wrap_content"
        android:background="#61CAEB"
        android:textColor="#FFFFFF"
        android:text="Sign in"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>