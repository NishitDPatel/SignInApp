<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1995BC"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="104sp"
        android:textColor="#FFFFFF"
        android:text="iMedicine"
        android:textSize="50sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24sp"
        android:textColor="#FFFFFF"
        android:text="Your friendly everyday dispenser"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="324sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8sp"
        android:orientation="vertical"
        android:background="@android:color/white">
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginEnd="24sp"
            android:hint="Username"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24sp"
            android:layout_marginEnd="24sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="24sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="324sp"
        android:layout_height="wrap_content"
        android:background="#61CAEB"
        android:textColor="#FFFFFF"
        android:text="Log in"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="148sp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:clickable="true"
        android:onClick="signup"
        android:text="Sign up for iMedicine"/>

</LinearLayout>